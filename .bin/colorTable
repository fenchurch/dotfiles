#!/bin/bash

str_len(){
    #clear the formatting
    local cl='%([BSUbfksu]|([FB]|){*})'
    #find string length unformatted
    local input=$( echo $1 | sed -e "s,$(echo -e "\e")\[[0-9;]*[a-zA-Z],,g" )
    echo "${#${(S%%)input//$~cl/}}"
}

##/bin/bash
#divider===============================
#divider=$divider$divider
#
#header="\n %-10s %8s %10s %11s\n"
#format=" %-10s %08d %10s %11.2f\n"
#
#width=43
